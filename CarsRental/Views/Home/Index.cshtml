@model CarsRental.ViewModels.ReservationViewModel

@{
    ViewBag.Title = "Index";
}

<div class="row" style="margin: 30px 0 10px 0;">
    <div class="col-md-6">
        <img src="~/Resources/Images/car-background-medium-title.png" />
    </div>
</div>

<div class="row">
    <div class="col-md-3 col-md-offset-2" style="background-image: url('../../Resources/Layout/dark-background.png');
        color: white; padding:10px;  min-height: 220px; font-size: 12px; border-radius: 5px">

        @if (TempData["Message"] != null)
        {
            <span class="label label-danger" style="font-size:14px;">@TempData["Message"]</span>
        }

        @using (Html.BeginForm("AddReservation", "Reservations", FormMethod.Post))
        {
            @Html.Label("Wybierz datę rozpoczęcia rezerwacji: ")

            @Html.TextBoxFor(m => m.Reservation.StartDate, new { @class = "datepicker form-control", placeholder = "Podaj datę rozpoczęcia", style = "width:180px;" })
            <br />

            @Html.Label("Wybierz datę zakończenia rezerwacji: ")
            @Html.TextBoxFor(m => m.Reservation.EndDate, new { @class = "datepicker form-control", placeholder = "Dodaj datę zakończenia", style = "width:180px;" })

            <br />
            <input type="submit" name="submit" value="Wyszukaj samochód" class="btn btn-primary" style="margin-top:10px;" />
        }
    </div>

    <div class="col-md-3 col-md-offset-1" style="background-image: url('../../Resources/Layout/dark-background.png');
        color: white; padding:10px; min-height: 220px; font-size: 12px; border-radius: 5px">
        Lista dokonanych rezerwacji:
        <br />
        @{
            Html.RenderAction("ReservationsMiniPanel", "Reservations");


        }

    </div>
    <br />
</div>

